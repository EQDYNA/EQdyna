#! /usr/bin/env python3
"""
Script to plot on fault initials like friction and stresses.
"""
from user_defined_params import *
import matplotlib.pyplot as plt
import numpy as np
import os
from matplotlib import animation, rc

#
SMALL_SIZE = 6

# Read in file name from terminal.
# fname = input("Enter the file name : ")


def plot_initials():
  fig = plt.figure()
  plt.rc('font', size=SMALL_SIZE)
  
  ax11 = fig.add_subplot(321)
  plt.contourf(on_fault_vars[:,:,9].T)
  ax = plt.gca()
  ax.set_aspect('equal')
  plt.colorbar
  plt.title("RSF_a")

  ax11 = fig.add_subplot(322)
  plt.contourf(on_fault_vars[:,:,10].T)
  ax = plt.gca()
  ax.set_aspect('equal')
  plt.colorbar
  plt.title("RSF_b")
  
  ax11 = fig.add_subplot(323)
  plt.contourf(on_fault_vars[:,:,11].T)
  ax = plt.gca()
  ax.set_aspect('equal')
  plt.colorbar
  plt.title("RSF_Dc")

  ax11 = fig.add_subplot(324)
  plt.contourf(on_fault_vars[:,:,46].T)  
  ax = plt.gca()
  ax.set_aspect('equal')
  plt.colorbar
  plt.title("Initial slip rate")

  ax11 = fig.add_subplot(325)
  plt.contourf(on_fault_vars[:,:,7].T)  
  ax = plt.gca()
  ax.set_aspect('equal')
  plt.colorbar
  plt.title("Initial normal")
  
  ax11 = fig.add_subplot(326)
  plt.contourf(on_fault_vars[:,:,8].T)  
  ax = plt.gca()
  ax.set_aspect('equal')
  plt.colorbar
  plt.title("Initial shear")
  
  plt.savefig("Initials.png", dpi = 600)
  plt.close()
  
  return (fig,)


#dirFiles = os.listdir(os.getcwd())
def _main_func(description):
    plot_initials()

if __name__ == "__main__":
    _main_func(__doc__)